<div class="form-group">
    <label for="title" class="form-label">Title</label>
    <input value="<%= article.title %>" required type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" id="description" class="form-control"><%=article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown" class="form-label">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<div class="mt-2">
    <a href="/articles/" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>